upstream chat-app {
    server chat-app:8000;
    keepalive 32;
}

upstream chat-streamlit {
    server chat-app:8502;
    keepalive 8;
}

upstream chat-monitor {
    server chat-monitor:5053;
    keepalive 8;
}

upstream chat-grafana {
    server chat-grafana:3000;
    keepalive 8;
}

upstream chat-prometheus {
    server chat-prometheus:9090;
    keepalive 8;
}

